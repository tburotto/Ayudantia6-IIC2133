  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author, id: :book_author, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :book_description, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :genre %>
    <%= form.text_field :genre, id: :book_genre, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :photo %>
    <%= form.file_field :photo, id: :book_photo %>
  </div>

  <div class="actions">
    <%= form.submit :Crear, class: "btn btn-success" %>
  </div>
<% end %>
